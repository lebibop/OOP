<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="oop">

    <class name="oop.Model.Client" table="client">
        <id name="id_client" type="int" column="id_client" >
            <generator class="increment" />
        </id>

        <property name="name" >
            <column name="name" />
        </property>
        <property name="surname" >
            <column name="surname" />
        </property>
        <property name="date_bd">
            <column name="date_bd" />
        </property>
        <property name="date_arrival" >
            <column name="date_arrival" />
        </property>
        <property name="date_departure" >
            <column name="date_departure" />
        </property>
        <property name="stay_lenght" >
            <column name="stay_lenght" />
        </property>
        <property name="room" >
            <column name="room_id_room" />
        </property>
    </class>

</hibernate-mapping>